<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".storeInfo.StoreRegionFragment"
    android:orientation="vertical">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:padding="20dp"
      android:orientation="horizontal"
      android:background="@drawable/shape_store_bg_chip"
      android:elevation="3dp"
      >

        <TextView
            android:id="@+id/tv_store_region_city"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:background="@drawable/shape_store_region_tv"
            android:gravity="center_vertical"
            android:text="시/도"
            android:textSize="18dp"
            android:drawableRight="@drawable/ic_arrow_down"/>
    <TextView
        android:id="@+id/tv_store_region_gu"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        android:background="@drawable/shape_store_region_tv"
        android:gravity="center_vertical"
        android:text="시/군/구"
        android:textSize="18dp"
        android:drawableRight="@drawable/ic_arrow_down"/>
    <TextView
        android:id="@+id/tv_store_region_dong"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:background="@drawable/shape_store_region_tv"
        android:gravity="center_vertical"
        android:text="동/읍/면"
        android:textSize="18dp"
        android:drawableRight="@drawable/ic_arrow_down"/>

  </LinearLayout>
    <ImageView
        android:id="@+id/imgv_store_region_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/alert_container"/>

</LinearLayout>