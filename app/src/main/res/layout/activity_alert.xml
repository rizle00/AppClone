<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.AlertActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">


        <ImageView
            android:id="@+id/alert_imgv_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/img_back"
            />
        <TextView
            style="@style/tv_title"
            android:text="알림"
            android:layout_marginRight="30dp"
            />

    </LinearLayout>
    <View
        style="@style/view_line_thin"/>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >

                <TextView
                    android:id="@+id/tv_alert_all"
                    style="@style/tv_rec"
                    android:padding="15dp"
                    android:text="전체"
                    android:textColor="@color/light_blue" />

                <View
                    android:id="@+id/v_alert_all"
                    style="@style/v_line_sel" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_alert_point"
                    style="@style/tv_rec"
                    android:padding="15dp"
                    android:text="해피포인트"
                    android:textColor="@color/gray" />

                <View
                    android:id="@+id/v_alert_point"
                    style="@style/v_line_white" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_alert_event"
                    style="@style/tv_rec"
                    android:padding="15dp"
                    android:text="이벤트"
                    android:textColor="@color/gray" />

                <View
                    android:id="@+id/v_alert_event"
                    style="@style/v_line_white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_alert_benefit"
                    style="@style/tv_rec"
                    android:padding="15dp"
                    android:text="혜택"
                    android:textColor="@color/gray" />

                <View
                    android:id="@+id/v_alert_order"
                    style="@style/v_line_white" />

                <View
                    android:id="@+id/v_alert_benefit"
                    style="@style/v_line_white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_alert_order"
                    style="@style/tv_rec"
                    android:padding="15dp"
                    android:text="주문"
                    android:textColor="@color/gray" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_alert_review"
                    style="@style/tv_rec"
                    android:padding="15dp"
                    android:text="리뷰"
                    android:textColor="@color/gray" />

                <View
                    android:id="@+id/v_alert_review"
                    style="@style/v_line_white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_alert_badge"
                    style="@style/tv_rec"
                    android:padding="15dp"
                    android:text="배지"
                    android:textColor="@color/gray" />

                <View
                    android:id="@+id/v_alert_badge"
                    style="@style/v_line_white" />

            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <FrameLayout
        android:id="@+id/alert_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/alert_container"/>

    </FrameLayout>


</LinearLayout>