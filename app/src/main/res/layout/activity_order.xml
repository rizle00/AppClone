<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.MainActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imgv_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/img_back"
            android:padding="5dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="제품선택"
            android:fontFamily="@font/spoqahansansneo_bold"
            android:textSize="25dp"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/imgv_search"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_search"
            android:padding="5dp"/>
        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/imgv_cart"
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_cart"
                android:padding="5dp"/>
            <TextView
                android:layout_marginLeft="26dp"
                android:layout_marginTop="6dp"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:textSize="10dp"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:fontFamily="@font/spoqahansansneo_regular"
                android:background="@drawable/ic_cart_select"/>

        </FrameLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#737475"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_blue">
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="케이크 예약"
            android:fontFamily="@font/spoqahansansneo_bold"
            android:textColor="@color/light_blue"
            android:textSize="20dp"
            app:strokeColor="@color/light_blue"
            app:strokeWidth="1dp"
            app:cornerRadius="30dp"
            android:backgroundTint="@color/white"
            android:elevation="5dp"
            android:stateListAnimator="@null"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            />
    </RelativeLayout>


    <FrameLayout
        android:id="@+id/container"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recv_order"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="13dp"
        android:paddingBottom="18dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
        </androidx.core.widget.NestedScrollView>

    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:background="@color/gray"
        android:padding="20dp">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="매장선택"
            android:textSize="18dp"
            android:drawableRight="@drawable/ic_arrow_right_white"
            android:textColor="@color/white"
            android:fontFamily="@font/spoqahansansneo_bold"/>
        <TextView

            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="매장을 선택하시면 선택한 매장에서 취급하는 상품만 확인하실 수 있습니다"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:fontFamily="@font/spoqahansansneo_regular"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#737475"
        />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:labelVisibilityMode="unlabeled"
        app:itemIconSize="50dp"
        app:menu="@menu/btm_nv_menu"/>


</LinearLayout>