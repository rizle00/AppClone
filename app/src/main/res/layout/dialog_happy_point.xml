<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".happy_point"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/imgv_dialog_happy_close"
        android:layout_gravity="center_horizontal"
        android:background="#123"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close_white"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <RelativeLayout
        android:background="#D0E2F3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/img_happy_logo"/>
        <TextView
            android:layout_marginRight="200dp"
            android:layout_alignParentRight="true"
            android:textColor="#193E61"
            android:paddingTop="20dp"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1,833P"/>

    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="520dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="520dp"
        android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:src="@drawable/img_happypoint_bcd"/>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <androidx.cardview.widget.CardView
                android:layout_margin="7dp"
                android:layout_width="190dp"
                android:layout_height="120dp"
                app:cardCornerRadius="30dp">

                <TextView
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:textSize="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="신용카드"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_margin="7dp"
                    android:layout_width="190dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="10dp"
                    app:cardBackgroundColor="#FFFFFFFF"
                    >

                    <ImageView
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_payco"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_margin="7dp"

                android:layout_width="200dp"
                android:layout_height="60dp"
                app:cardCornerRadius="40dp">

                <ImageView
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_happypay"/>
            </androidx.cardview.widget.CardView>


        </LinearLayout>



    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_margin="7dp"
        android:backgroundTint="#DDE3FA"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardCornerRadius="40dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textSize="25dp"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:textColor="#091CA5"
                android:text="모바일상품권"/>

            <ImageView
                android:layout_marginRight="20dp"
                android:layout_alignParentEnd="true"
                android:layout_width="120dp"
                android:layout_height="110dp"
                android:src="@drawable/img_money_plus"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>



    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/img_happypoint0"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/img_happypoint0"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/img_happypoint3"/>

        </LinearLayout>




    </LinearLayout>



    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">




        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/img_happypoint3"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/img_happypoint4"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/img_happypoint5"/>

        </LinearLayout>




    </LinearLayout>

    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <RelativeLayout
        android:background="#E9E9EA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:src="@drawable/img_happypoint_bt1"/>


        <ImageView
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/img_happypoint_bt2"/>


    </RelativeLayout>
    </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>