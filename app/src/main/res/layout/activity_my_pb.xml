<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyPbActivity"

    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        >

    <ImageView

        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/my_img1"
        android:layout_alignParentLeft="true"/>
    <ImageView

        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/img_bell0"
        android:layout_alignParentRight="true"/>
    </RelativeLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:background="#0E355C">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="김민주님"
          android:textColor="#F9F9F9"
          android:textSize="25dp"
          android:layout_margin="10dp"/>



        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="#F6F8FA"
            app:cardCornerRadius="10dp"
            android:layout_gravity="center_horizontal"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">



               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:orientation="vertical"
                   android:padding="10dp"
                   android:layout_weight="5">

                      <ImageView
                       android:layout_width="110dp"
                       android:layout_height="30dp"
                          android:src="@drawable/img_point"/>
                    <TextView
                       android:layout_width="90dp"
                       android:layout_height="30dp"
                       android:textSize="20dp"
                       android:text=" 0P"
                       android:layout_marginLeft="30dp"
                       android:textColor="#EC1340"/>
               </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/img_bacod0"
                        />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="85dp"
        android:layout_height="60dp"
        android:src="@drawable/img_choose1"
        />
    <ImageView
        android:layout_width="85dp"
        android:layout_height="60dp"
        android:src="@drawable/img_choose2"
        />
    <ImageView
        android:layout_width="85dp"
        android:layout_height="60dp"
        android:src="@drawable/img_choose3"
        />
    <ImageView
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:src="@drawable/img_choose4"
        />

</LinearLayout>

    </LinearLayout>






<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="7">




</LinearLayout>



</LinearLayout>