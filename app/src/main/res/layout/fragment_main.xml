<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".main.MainFragment"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recv_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <!--    아이템 추가시 텍스트뷰 2개
1개는 유동 1개는 고정
프레임 레이아웃으로-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:src="@drawable/login_img" />

                <TextView
                    android:id="@+id/tv_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:text="로그인"
                    android:textSize="27dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"
                    android:text="파리바게뜨에 오신 걸 환영합니다."
                    android:textSize="17.5dp"
                    android:textColor="@color/black"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <LinearLayout style="@style/ll_banner_btns">

                    <ImageView
                        style="@style/imgv_best"
                        android:src="@drawable/best_yellow" />

                    <ImageView
                        android:id="@+id/imgv_cake"
                        style="@style/imgv_banner_btn"
                        android:src="@drawable/btn_cake" />

                    <TextView
                        style="@style/tv_banner_btn"
                        android:text="케이크 예약" />

                </LinearLayout>

                <LinearLayout style="@style/ll_banner_btns">

                    <ImageView
                        style="@style/imgv_hot"
                        android:src="@drawable/hot" />

                    <ImageView
                        android:id="@+id/imgv_search"
                        style="@style/imgv_banner_btn"
                        android:src="@drawable/btn_search" />

                    <TextView
                        style="@style/tv_banner_btn_margin"
                        android:text="상품찾기" />

                </LinearLayout>

                <LinearLayout style="@style/ll_banner_btns">

                    <ImageView
                        style="@style/imgv_best"
                        android:src="@drawable/best_yellow" />

                    <ImageView
                        android:id="@+id/imgv_sand"
                        style="@style/imgv_banner_btn"
                        android:src="@drawable/btn__sand" />

                    <TextView
                        style="@style/tv_banner_btn_margin"
                        android:text="전국샌드" />

                </LinearLayout>

                <LinearLayout style="@style/ll_banner_btns_margin">

                    <ImageView
                        android:id="@+id/imgv_event"
                        style="@style/imgv_banner_btn"
                        android:src="@drawable/btn_event" />

                    <TextView
                        style="@style/tv_banner_btn_margin"
                        android:text="이벤트" />

                </LinearLayout>


                <LinearLayout style="@style/ll_banner_btns_margin">

                    <ImageView
                        android:id="@+id/imgv_more"
                        style="@style/imgv_banner_btn"
                        android:src="@drawable/btn_more" />

                    <TextView
                        style="@style/tv_banner_btn_margin"
                        android:text="더보기" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_btn_below"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <LinearLayout style="@style/ll_banner_btns_margin">

                    <ImageView
                        android:id="@+id/imgv_delivery"
                        style="@style/imgv_banner_btn_below"
                        android:src="@drawable/btn_deliver" />

                    <TextView
                        style="@style/tv_banner_btn_margin"
                        android:text="딜리버리" />

                </LinearLayout>

                <LinearLayout style="@style/ll_banner_btns_margin">

                    <ImageView
                        android:id="@+id/imgv_gift"
                        style="@style/imgv_banner_btn_below"
                        android:src="@drawable/btn_gift" />

                    <TextView
                        style="@style/tv_banner_btn_margin"
                        android:text="선물하기" />

                </LinearLayout>

                <LinearLayout style="@style/ll_banner_btns_margin">

                    <ImageView
                        android:id="@+id/imgv_paper"
                        style="@style/imgv_banner_btn_below"
                        android:src="@drawable/btn_paper" />

                    <TextView
                        style="@style/tv_banner_btn_margin"
                        android:text="지류상품권" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" />


            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:scaleType="fitXY"
                android:src="@drawable/mid_banner" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"

                    >

                    <TextView
                        android:id="@+id/tv_rec"
                        style="@style/tv_rec"
                        android:layout_height="match_parent"
                        android:text="이번주 추천"
                        android:textColor="@color/light_blue" />

                    <View style="@style/v_line_sel" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_yrec"
                        style="@style/tv_rec"
                        android:text="지난 추천"
                        android:textColor="@color/gray" />

                    <View style="@style/v_line_def" />

                </LinearLayout>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recv_rec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:src="@drawable/bottom_banner"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f1f5ff"
                android:paddingTop="30dp"
                android:paddingLeft="10dp"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/tv_ranking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="파바앱 랭킹 TOP10 "
                    android:textSize="27dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:drawableRight="@drawable/tv_trophy"
                    android:layout_marginBottom="5dp"/>

                <com.google.android.material.chip.ChipGroup
                    android:layout_below="@id/tv_ranking"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content">
                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_1"
                    style="@style/chip"
                    app:chipBackgroundColor="@color/white"
                    app:rippleColor="@color/dark_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="#당 충전시간#"
                    android:textColor="@color/white"
                    app:iconStartPadding="5dp"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    app:chipIconVisible="true"
                    android:layoutDirection="rtl"
                    app:chipIcon="@drawable/tv_sweet"
                    />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_2"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:text="text_choice_2"/>


                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:text="text_choice_3"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:text="text_choice_4"/>
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:text="text_choice_4"/>

            </com.google.android.material.chip.ChipGroup>


            </RelativeLayout>


            <!--스크롤뷰 리니어-->
        </LinearLayout>
    </ScrollView>
</LinearLayout>