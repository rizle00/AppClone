<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".event.EventActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/event_imgv_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/img_back"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/event_tv_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="이벤트"
            android:textColor="@color/black"
            android:fontFamily="@font/spoqahansansneo_bold"
            android:textSize="22dp"
            android:gravity="center"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/top_img2"
            android:layout_marginRight="20dp"/>



    </LinearLayout>
    <View
        style="@style/view_line_thin"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"

            >

            <TextView
                android:id="@+id/event_tv_common"
                style="@style/tv_event"
                android:text="공통 프로모션"
                android:textColor="@color/light_blue" />

            <View
                android:id="@+id/v_rec_left"
                style="@style/v_line_sel" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/event_tv_store"
                style="@style/tv_event"
                android:text="매장 프로모션"
                android:textColor="@color/gray" />

            <View
                android:id="@+id/v_rec_right"
                style="@style/v_line_def" />

        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/event_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>