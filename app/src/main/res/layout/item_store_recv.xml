<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:src="@drawable/ic_android_black_24dp"
                android:layout_marginLeft="10dp"
                />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="2.5"
            >
            <TextView
                android:id="@+id/img_info1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="광주공군비행단"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="30dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_android_black_24dp"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/img_info2"
                android:layout_below="@+id/img_info1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#6DA3DA"
                app:cardCornerRadius="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#08121C"
                    android:textSize="10dp"
                    android:text="커피특가"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/img_info3"

                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/img_info2"
                android:layout_alignBottom="@+id/img_info2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#F1ADBD"
                app:cardCornerRadius="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#C10A1D"
                    android:textSize="10dp"
                    android:text="파리의아침"/>



            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/img_info4"
                android:layout_below="@+id/img_info3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="12dp"
                android:text="픽업가능시간 : 06:00~21:00"/>
            <TextView
                android:id="@+id/img_info5"
                android:layout_marginLeft="90dp"
                android:layout_toRightOf="@+id/img_info4"
                android:layout_alignBottom="@+id/img_info4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="920m"/>


            <TextView
                android:id="@+id/img_info6"
                android:layout_below="@+id/img_info4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="12dp"
                android:text="품목 164"/>



        </RelativeLayout>



</LinearLayout>