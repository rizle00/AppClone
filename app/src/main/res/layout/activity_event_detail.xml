<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".event.EventActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/event_detail_imgv_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/img_back"
            android:padding="5dp"/>
        <TextView
            style="@style/tv_title"
            android:text="이벤트 상세"
            />
        <ImageView
            android:id="@+id/event_detail_imgv_bcd"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/top_img2"
            android:layout_marginRight="5dp"/>
<!--        -->
        <ImageView
            android:id="@+id/event_detail_imgv_share"
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_share"
            android:layout_marginRight="10dp"/>



    </LinearLayout>
    <View
        style="@style/view_line_thin"/>

    <FrameLayout
        android:id="@+id/event_detail_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>