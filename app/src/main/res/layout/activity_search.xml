<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".order.SearchActivity"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">
    <ImageView
        android:id="@+id/imgv_search_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/img_back"
        />
    <EditText
        android:layout_marginLeft="10dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="50dp"
        android:background="@color/white"
        android:hint="상품을 검색해주세요."
        />
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="15dp"
        android:src="@drawable/ic_close_gray"/>
    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_search"/>

</LinearLayout>
    <View
        style="@style/view_line_thick"
        android:background="@color/light_blue"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginTop="30dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="최근 상품 검색어"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20dp"/>
        <ImageView
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/alert_container"/>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:columnCount="2"
            android:orientation="horizontal"
            android:visibility="gone"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인기 검색어"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"/>
        <com.google.android.material.chip.ChipGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            >

            <com.google.android.material.chip.Chip
                android:id="@+id/search_chip_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                app:chipBackgroundColor="@color/bg_blue"
                android:text="#베이글"
                android:textColor="@color/light_blue"
                />
            <com.google.android.material.chip.Chip
                android:id="@+id/search_chip_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                app:chipBackgroundColor="@color/bg_blue"
                android:text="#크림빵"
                android:textColor="@color/light_blue"
                />
            <com.google.android.material.chip.Chip
                android:id="@+id/search_chip_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                app:chipBackgroundColor="@color/bg_blue"
                android:text="#식빵"
                android:textColor="@color/light_blue"
                />
            <com.google.android.material.chip.Chip
                android:id="@+id/search_chip_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                app:chipBackgroundColor="@color/bg_blue"
                android:text="#그래놀라"
                android:textColor="@color/light_blue"
                />
            <com.google.android.material.chip.Chip
                android:id="@+id/search_chip_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                app:chipBackgroundColor="@color/bg_blue"
                android:text="#아메리카노"
                android:textColor="@color/light_blue"
                />



        </com.google.android.material.chip.ChipGroup>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="추천 상품"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginBottom="20dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgv_search_product1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@drawable/search_product1"/>
            <ImageView
                android:id="@+id/imgv_search_product2"
                android:layout_marginTop="6dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:src="@drawable/search_product2"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>